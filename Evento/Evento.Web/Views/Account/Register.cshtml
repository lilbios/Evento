@model Evento.BLL.Accounts.DTO.RegisterDTO

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<div class=" containerLog containerReg" id="container">
    <div class="form-container sign-in-container">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <h1>@Localizer["Create"]</h1>



            <div>
                <label>@Localizer["First"]</label><br />
                <input class="login" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label>@Localizer["LastName"]</label><br />
                <input class="login" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div>
                <label>@Localizer["DateOfBirth"]</label><br />
                <input class="login" asp-for="DataOfBirth" />
                <span asp-validation-for="DataOfBirth"></span>
            </div>
            <div>
                <label>@Localizer["Email"]</label><br />
                <input class="login" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label>@Localizer["Password"]</label><br />
                <input class="login" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label>@Localizer["PasswordConfirm"]</label><br />
                <input class="login" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>


            <button>@Localizer["SignUp"]</button>
        </form>
    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>@Localizer["WelcomeBack"]</h1>
                <p>@Localizer["Keep"]</p>
                <a href="/Account/Login" class="ghost" id="signIn">@Localizer["SignIn"] </a>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
   
</script>


