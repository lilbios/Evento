<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <title>  @Localizer["Evento"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.2/css/all.min.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src=@Url.Content("~/js/Login.js")></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../Scripts/jquery.signalR-2.0.1.min.js" type="text/javascript"></script>
    <script src="../signalr/hubs" type="text/javascript"></script>
    <script src="../Scripts/jquery-2.0.3.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
  

</head>
<body>
    @using Microsoft.AspNetCore.Mvc.Localization

    @inject IViewLocalizer Localizer


    <div class="mainWindow">


        <div class="topbar">

            <div class="topbar-right">
                <a class="navbar-brand title" asp-area="" asp-controller="Home" asp-action="Index">Evento</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              

                <a href="/Events/CreateNewEvent" class="iconBtn" id="createProjectBtn">
                    <div class="iconBtn__content">

                        @Localizer["NewEvent"]
                    </div>
                </a>
                <div>
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </div>
                <div class="notificationBell">
                    <img class="notificationBell__icon" src="http://stark-schwarz.de/wp-content/uploads/2019/12/bell-solid.svg">
                    <div class="notificationBell__value"></div>
                </div>
                <div class="profile">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
        <div class="content" style="margin-top:7em">
            @RenderBody()
        </div>
    </div>
    <div class="modalWindow modalWindow--inactive">
        <div class="closeModal"></div>

        <div class="notificationBar notificationBar--inactive">
            <h2 class="blackFont">
                @Localizer["Notification"]
            </h2>
            <div class="notificationBox newNotification">

                <div class="notificationBox newNotification">

                    <div class="content__row madeInBamberg">
                        <div id="loginBlock">
                            @Localizer["ToChat"]<br />
                            <input class="chat" id="userName" type="text" />
                            <input class="chat" id="loginBtn" type="button" value=@Localizer["Enter"] />
                        </div><br />

                        <div id="header"></div><br />

                        <div id="inputForm">
                            <input class="chat" type="text" id="message" />
                            <input class="chat" type="button" id="sendBtn" value=@Localizer["Send"] />
                        </div>
                        <div id="chatroom"></div>


                    </div>

                </div>


            </div>
        </div>

    </div>
    <script src="js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/others/signal.js"></script>
    <script src="~/js/others/notification.js"></script>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @Localizer["Footer"] - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
